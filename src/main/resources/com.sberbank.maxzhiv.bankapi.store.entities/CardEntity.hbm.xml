<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="com.sberbank.maxzhiv.bankapi.store.entities.CardEntity" table="CARD">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="balance" column="card_balance"/>
        <property name="name" column="name"/>

        <many-to-one name="account" column="account_id"
                     class="com.sberbank.maxzhiv.bankapi.store.entities.AccountEntity"
                     cascade="save-update" />
    </class>
</hibernate-mapping>